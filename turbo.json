{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "outputs": ["dist/**", "bundles/**"],
      "dependsOn": ["clean", "^build"]
    },
    "clean": {
      "cache": false
    },
    "type-check": {
      "dependsOn": ["^build", "^type-check"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["^build", "^test"]
    },
    "format": {},
    "format-check": {}
  }
}
